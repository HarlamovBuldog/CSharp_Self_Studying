<Window x:Class="Cash_desk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cash_desk"
        mc:Ignorable="d"
        Title="Cash_desk" Height="450" Width="800">
    <Window.Resources>
    </Window.Resources>
    <Grid>
        
    </Grid>

    <!-- Шаблон данных для страницы просмотра и добавления групп -->
        <DataTemplate DataType="{x:Type local:ProductGroupVM}">
            <WrapPanel Orientation="Horizontal">
                <Button Content="" Command="{Binding AddGroupCommand}" />
                <Button Content="{Binding GroupContent}" Command="{Binding GetGroupInfoCommand}" />
            </WrapPanel>
        </DataTemplate>
        <!-- Шаблон данных для страницы просмотра и добавления элементов внутри группы -->
        <DataTemplate DataType="{x:Type local:ProductChildVM}">
            <WrapPanel Orientation="Horizontal">
                <Button Content="" Command="{Binding AddChildCommand}" />
                <Button Content="{Binding ChildContent}" Command="{Binding GetChildInfoCommand}" />
            </WrapPanel>
        </DataTemplate>
    
    <Window.DataContext>
        <local:MainViewVM/>
    </Window.DataContext>
</Window>
